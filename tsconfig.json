{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,    
    "allowJs": true,                
    "removeComments": true,               
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
  },
  "include": [
    "packages/**/**/*"
  ],
}